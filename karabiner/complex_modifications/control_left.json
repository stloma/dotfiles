{
  "title": "Change left control to Command-Control-Option",
  "rules": [
    {
      "description": "Left control to Command-Control-Option",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command",
              "modifiers": [
                "left_control",
                "left_option"
              ]
            }
          ]
        }
      ]
    }
  ]
}
